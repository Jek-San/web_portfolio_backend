generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["portfolio"]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())

  @@schema("portfolio")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  content     String?
  imageUrl    String
  images      Json?
  link        String
  repo        String?
  tags        Json
  createdAt   DateTime @default(now())

  views ViewLog[] @relation("ProjectViews")

  @@schema("portfolio")
}

model ViewLog {
  id          Int      @id @default(autoincrement())
  projectSlug String
  deviceId    String
  ip          String?
  userAgent   String?
  createdAt   DateTime @default(now())

  project Project @relation("ProjectViews", fields: [projectSlug], references: [slug])

  @@index([projectSlug, deviceId, createdAt])
  @@schema("portfolio")
}
